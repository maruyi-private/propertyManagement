
.uni-cell-lineheight-100 {
	padding-left: 20rpx;
}
.uni-input {
	margin: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 80rpx;
	border-bottom: 1rpx solid #bbbbbb;
}
.charge-nums {
	border-radius: 50rpx;
	background: #efefef;
	line-height: 40rpx;
	padding: 10rpx 30rpx 10rpx;
}
._active{
	background: #ed7130;
	color: #FFFFFF;
}
.charge-btn {
	border: 1rpx solid #ff913b;
	border-radius: 50rpx;
	padding: 0rpx 160rpx 0rpx;
	height: 80rpx;
	line-height: 80rpx;
}
.uni-input-row {
	line-height: 100rpx;
}
.charge-money {
	background: #f7f6fb;
}
.charge-content {
	background: #ffffff;
	margin: 20rpx;
}
.charge-content-header {
	text-align: center;
	line-height: 60rpx;
}
.user-header {
	height: 80rpx;
	width: 80rpx;
	border-radius: 50%;
}
.user-name {
	line-height: 80rpx;
	padding-left: 20rpx;
}
.balance {
	height: 280rpx;
	line-height: 300rpx;
}
.color89 {
	text-align: center;
	line-height: 100rpx;
}

