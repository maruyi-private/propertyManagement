.cat-label {
  width: 100%;
}
.cat-label .container.labelTop {
  display: block;
}
.cat-label .container.labelTop .data {
  width: 100%;
}
.cat-label .container {
  padding: 24rpx 30rpx;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.cat-label .container .text {
  width: 25%;
  margin-right: 5%;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: inherit;
  line-height: 1.8;
  overflow: hidden;
}
.cat-label .container .hasX::before {
  content: '*';
  color: red;
}
.cat-label .container .data {
  width: 70%;
  min-height: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: inherit;
  line-height: 1.5;
  overflow: hidden;
}
.cat-label .container .data .data-l.modeImg {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.cat-label .container .data .data-l.modeImg .imgs:last-child {
  margin: 0;
}
.cat-label .container .data .data-l.modeImg .imgs {
  width: 140rpx;
  height: 140rpx;
  margin-right: 16rpx;
  position: relative;
}
.cat-label .container .data .data-l.modeImg .imgs .edit {
  z-index: 10;
  position: absolute;
  right: 0;
  top: 0;
  margin-top: -4px;
}
.cat-label .container .data .data-l.modeImg .imgs .img {
  width: 100%;
  height: 100%;
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
}
.cat-label .container .data .data-l.text {
  margin: 0;
  padding: 0;
}
.cat-label .container .data .data-l {
  width: 90%;
  position: relative;
}
.cat-label .container .data .data-l .input,
.cat-label .container .data .data-l .dataText {
  padding: 0;
  margin: 0;
  width: 100%;
  border: none;
  outline: none;
  font-size: 28rpx;
}
.cat-label .container .data .data-l .input.err {
  color: red;
}
.cat-label .container .data .data-l .input.default {
  color: #333;
}
.cat-label .container .data .data-r {
  width: 15%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cat-label .container::after {
  position: absolute;
  z-index: 3;
  right: 30rpx;
  bottom: 0;
  left: 30rpx;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
  background-color: #c0c0c0;
}
.cat-label .textarea {
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
  position: relative;
  text-align: left;
}
.cat-label .info {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
}

